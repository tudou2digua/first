<!doctype html>
<html lang="en">
 <head>
  <meta charset="UTF-8">
  <meta name="Generator" content="EditPlusÂ®">
  <meta name="Author" content="">
  <meta name="Keywords" content="">
  <meta name="Description" content="">
  <title>Document</title>
  <style>
	.page{
		width:300px;
		height:300px;
		position:relative;
		margin:0 auto;
		}
	.page-item{
		width:300px;
		height:300px;
		background-color:#000;
		color:#fff;
		font-size:300px;
		line-height:300px;
		position:absolute;
		top:0;
		left:0;
		text-align:center;
		-webkit-transition:all .5s;
		}
		.ctrl{
		width:300px;
		height:300px;
		margin:0 auto;
		}
		#page-item-2,#page-item-3,#page-item-4,#page-item-5,#page-item-6{
				-webkit-transform-origin:bottom;
				-webkit-transform:rotateX(90deg);
				}
  </style>
 </head>
 <body>
  <div class="page">
	<div class="page-item" id="page-item-6">6</div>
	<div class="page-item" id="page-item-5">5</div>
	<div class="page-item" id="page-item-4">4</div>
	<div class="page-item" id="page-item-3">3</div>
	<div class="page-item" id="page-item-2">2</div>
	<div class="page-item" id="page-item-1">1</div>
  </div>
  <div class="ctrl">
	<a href="javascript:pre();">pre</a>&nbsp;<a href="javascript:next()">next</a>
  </div>
  <script type="text/javascript">
	var curIndex=1;
	function pre(){
		if(curIndex==1) return;
		var curPage=document.getElementById('page-item-'+curIndex);
		curPage.style.webkitTransform="rotateX(90deg)";
		curIndex--;
		var prePage=document.getElementById('page-item-'+curIndex);
			prePage.style.webkitTransform="rotateX(0deg)";
	}
	function next(){
		if(curIndex==6) return;
		var curPage=document.getElementById('page-item-'+curIndex);
		curPage.style.webkitTransform="rotateX(-90deg)";
		curIndex++;
		var nextPage=document.getElementById('page-item-'+curIndex);
			nextPage.style.webkitTransform="rotateX(0deg)";
	}
  </script>
 </body>
</html>
