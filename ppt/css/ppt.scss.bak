body,div,img,h1,h2,a{
	margin:0;
	padding:0;
	text-decoration:none;
}
.main{
	position:relative;
	width:100%;
	height:251px;
	.main-page{
			position:relative;
			width:100%;
			height:100%;
			overflow:hidden;
			.page-item{
				text-align:center;
				position:absolute;
				right:50%;
				-webkit-transition:all .5s;
				width:100%;
				height:100%;
				z-index:2;
				opacity:0;
				img{
					width:100%;
					height:100%;
					
					}
				.caption {
						position:absolute;
						left:20%;
						top:16%;
						text-align:right;
					h1,h2{
						-webkit-font-smoothing:antialiased;
						font-weight:900;
						color:#6b6b6b;
						-webkit-transition:all .8s .8s;
						opacity:0;
					}
					h1{
						font-size:30px;
						margin-right:25px;
					}
					h2{
						font-size:20px;
						margin-right:-25px;
					}
				}
			}
			.page-item-active{
				right:0;
				z-index:2;
				opacity:1;
				.caption h1,.caption h2{
				margin-right:0;
				opacity:1;
				}
			}
			#main-background{
			right:0;
			z-index:1;
			opacity:1;
				.caption h1,.caption h2{
		
				opacity:0;
				}
				img{
				opacity:1;
				}
			}
		}
	.main-ctrl{
			text-align:center;
			height:8px;
			line-height:8px;
			position:absolute;
			bottom:0px;
			width:100%;
			z-index:3;
		.ctrl-item{
				display:inline-block;
				width:14.13%;
				height:8px;
				margin-left:1px;
				background-color:#cfcfcf;
				position:relative;
				&:hover{
					background-color:#ababab;
					img{
						bottom:8px;
						opacity:1;
						}
				}
				img{
					display:inline-block;
					width:100%;
					position:absolute;
					left:0;
					bottom:20px;
					opacity:0;
					-webkit-transition:all .3s;
					-webkit-box-reflect:below 0 -webkit-linear-gradient(transparent,transparent 50%,rgba(255,255,255,.3));
				}
			
			
		}
		.ctrl-item-active{
				background-color:#9c9c9c;
				&:hover{
					background-color:#9c9c9c;
					img{
						opacity:0;
						}
					}
				}
	}
}