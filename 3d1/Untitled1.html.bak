<!doctype html>
<html lang="en">
 <head>
  <meta charset="UTF-8">
  <meta name="Generator" content="EditPlusÂ®">
  <meta name="Author" content="">
  <meta name="Keywords" content="">
  <meta name="Description" content="">
  <title>Document</title>
  <style>
	.experience{
		-webkit-perspective:800;
		-webkit-perspective-origin:50% 50%;
		margin:100px auto;
		}
	.page{
		width:200px;
		height:200px;
		
		position:relative;
		-webkit-transform-style:preserve-3d;
		}
	.page-item{
	width:200px;
	height:200px;
	background-color:#000000;
	color:#fff;
	font-size:200px;
	text-align:center;
	line-height:200px;
	position:absolute;
	top:0;
	left:0;
	-webkit-transition: -webkit-transform 1s linear;
	}
	#page-item-2{
	-webkit-transform-origin:left;
	-webkit-transform:rotateY(90deg);
	}
	#page-item-3{
	-webkit-transform-origin:right;
	-webkit-transform:rotateY(-90deg);
	}
	#page-item-4{
	-webkit-transform-origin:top;
	-webkit-transform:rotateX(-90deg);
	}
	#page-item-5{
	-webkit-transform-origin:bottom;
	-webkit-transform:rotateX(90deg);
	}
	#page-item-6{
	-webkit-transform:translateZ(-200px);
	}
	.ctrl{
	width:600px;
	height:600px;
	margin:40px auto;
	}
	.ctrl input[type="range"]{
		width:400px;
		vertical-align:middle;
		}
	.ctrl label{
		vertical-align:middle;
		}
	.ctrl div{
		height:50px;
		line-height:50px;
		}
  </style>
 </head>
 <body>
 <div class="experience">
	  <div class="page">
		<div class="page-item" id="page-item-6">6</div>
		<div class="page-item" id="page-item-5">5</div>
		<div class="page-item" id="page-item-4">4</div>
		<div class="page-item" id="page-item-3">3</div>
		<div class="page-item" id="page-item-2">2</div>
		<div class="page-item" id="page-item-1">1</div>
	  </div>
  </div>
  <div class="ctrl">
	<div>
		<label for="rotateX">rotateX:</label>
		<input type="range" min="-360" max="360" id="rotatex" onchange="rotate()"/>
	</div>
	<div>
		<label for="rotateX">rotateY:</label>
		<input type="range" min="-360" max="360" id="rotatey" onchange="rotate()"/>
	</div>
	<div>
		<label for="rotateX">rotateZ:</label>
		<input type="range" min="-360" max="360" id="rotatez" onchange="rotate()"/>
	</div>
  </div>
  <script type="text/javascript">
  function rotate(){
	var oPage=document.getElementsByClassName('page')[0];
	var x = document.getElementById('rotatex').value;
	var y = document.getElementById('rotatey').value;
	var z = document.getElementById('rotatez').value;
	oPage.style.webkitTransform = "rotateX("+x+"deg) rotateY("+y+"deg) rotateZ("+z+"deg)";
  };
  </script>
 </body>
</html>
